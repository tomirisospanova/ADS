package Problem;

public class Problem_6 {
    private static int calculatePower(int a, int n) {
        if (n == 0) {
            return 1;
        } else {
            return a * calculatePower(a, n - 1);
        }
    }

    public static int findPower(int a, int n) {
        return calculatePower(a, n);
    }
}
